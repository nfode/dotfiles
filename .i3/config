client.focused_inactive	$foreground_i3wmthemer	$background_i3wmthemer	$foreground_i3wmthemer	#de9028		   #000000
client.unfocused       	$foreground_i3wmthemer	$background_i3wmthemer	$foreground_i3wmthemer	#de9028	    #000000
client.urgent		        $foreground_i3wmthemer	$background_i3wmthemer	$foreground_i3wmthemer	#de9028		    #000000
# }}}
