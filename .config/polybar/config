[colors]
background 	= ${xrdb:background}
foreground 	= ${xrdb:foreground}
color1	= ${xrdb:color2}
color2	= ${xrdb:color4}
color7	= ${xrdb:color7}
color3 = #de9028
alpha = #4C4C51

[bar/hires]
inherit = bar/default
height=50
font-0 = NotoSans Nerd Font:style=Regular:size=22;3

[bar/default]
monitor = ${env:MONITOR:fallback-value}
bottom = false
width = 100%
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

height=35
background = ${colors.background}
foreground =  ${colors.foreground}

line-size = 3
line-color = ${colors.foreground}

border-size = 0
border-color = ${colors.color1}
module-margin-left = 0
module-margin-right = 0
font-0 = NotoSans Nerd Font:style=Regular:size=18;3
modules-left = i3
modules-center = date
modules-right = weather pavolume battery
tray-position = right
tray-padding = 9
tray-transparent = false
tray-offset-y = 0%
tray-offset-x = 0%
tray-maxsize = 20
tray-detached = false
tray-background = ${colors.background}
wm-restack = i3

[module/pavolume]
type = custom/script
tail = true
format-padding=2
label = "%output%"
exec = pavolume.sh --listen
click-right = exec pavucontrol
click-left = pavolume.sh --togmute
scroll-up = pavolume.sh --up
scroll-down = pavolume.sh --down

[module/weather]
type = custom/script
exec = wedder
exec-if = ping openweathermap.org -c 1
tail = true

[module/i3]
type = internal/i3
pin-workspaces = true
format = <label-state> <label-mode>
ws-icon-0 = browse;
