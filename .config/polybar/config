[module/musicinfo]
type = custom/script

exec = ~/.config/polybar/music.sh
interval = 10
format = <label>
label = %output%
format-padding = 2
format-foreground = #1ed760

[module/date]
type = internal/date
interval = 1

date =
date-alt = "%d/%m/%Y"

time = "%a %b %d, %H:%M"
time-alt = %H:%M

format-prefix-foreground = ${colors.my_foreground}
format-undeline =

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99

format-padding = 2

format-full-background = ${colors.background}
format-charging-background = ${colors.background}
format-charging = "  <label-charging> "

format-discharging-background = ${colors.background}
